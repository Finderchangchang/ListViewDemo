<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_my_item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_view_top_big_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/my_item_left_img_ll"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/my_item_left_image"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/my_item_left_img_ll">

            <LinearLayout
                android:id="@+id/item_view_top_small_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/my_item_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条目名称"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/my_item_right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提示信息"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/my_item_right_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/item_view_bottom_small_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-1dp"
                android:background="#E2E2E2"
                android:orientation="horizontal"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_view_bottom_big_line"
        android:layout_width="match_parent"
        android:layout_marginTop="-1dp"
        android:layout_height="1dp"
        android:background="#E2E2E2"
        android:orientation="horizontal"
        android:visibility="gone" />
</LinearLayout>