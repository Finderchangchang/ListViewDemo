<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srf_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/total_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="#B14344"
                android:gravity="bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:src="@mipmap/logo" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="81dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/wode_ll_yue"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/person_center_balance_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="#F2A205"
                                android:textSize="22dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textColor="#F2A205" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的余额" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wode_ll_libao"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/person_center_package_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FF5A43"
                                android:textSize="22dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="个"
                                android:textColor="#FF5A43" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的礼包" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wode_ll_jifen"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/person_center_integral_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#70AD34"
                                android:textSize="22dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分"
                                android:textColor="#70AD34" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的积分" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/main_item_line"></LinearLayout>
            </RelativeLayout>

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_libao"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:myitem_leftimage="@mipmap/person_center_lipinicon"
                app:myitem_lefttext="礼包兑换"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:myitem_leftimage="@mipmap/person_center_dingdan"
                app:myitem_lefttext="我的订单"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou"
                app:myitem_righttext="1月内0条" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:myitem_leftimage="@mipmap/person_center_daishouhuo"
                app:myitem_lefttext="收货地址"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou"
                app:myitem_righttext="0条" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_daijinquan"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:myitem_leftimage="@mipmap/person_center_youhuiquan"
                app:myitem_lefttext="代金券"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou"
                app:myitem_righttext="0条" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_xiaoxi"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:myitem_leftimage="@mipmap/person_center_xiaoxi"
                app:myitem_lefttext="站内消息"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou"
                app:myitem_righttext="未读0条" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_bangzhu"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                app:is_top="true"
                app:myitem_leftimage="@mipmap/person_center_bangzhuzhongxin"
                app:myitem_lefttext="帮助中心"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_yijian"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:is_center="true"
                app:myitem_leftimage="@mipmap/person_center_yijian"
                app:myitem_lefttext="意见反馈"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou" />

            <liuliu.demo.list.view.MyItemView
                android:id="@+id/wode_item_women"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                app:is_bottom="true"
                app:myitem_leftimage="@mipmap/iconfont_jiaruwomen"
                app:myitem_lefttext="关于我们"
                app:myitem_rightimage="@mipmap/person_center_wenbenkuangyoucejiantou" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>